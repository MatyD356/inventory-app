extends layout

block content
  ul(class='list-none')
        li(class='bg-white shadow-2xl m-4 p-4 rounded-md')
          h2(class='text-2xl text-red-900') #{data.name}
          p #{data.desc}
          div
            a(href='#' class='m-4 ml-0 inline-block p-2 border-solid border-2 border-red-900 rounded-md hover:text-red-50 hover:bg-red-500 transform duration-200') UPDATE
            a(href=data.url+'/delete' class='m-4 inline-block p-2 border-solid border-2 border-red-900 rounded-md hover:text-red-50 hover:bg-red-500 transform duration-200') DELETE 