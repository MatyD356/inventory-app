extends layout

block content
    ul(class='flex flex-wrap h-screen justify-around text-center')
      each guitar in guitar_list
        li(class='bg-white my-4 shadow-2xl p-3 rounded-md w-full md:w-1/4 m-1 ')
          h3(class='text-red-900 text-xl') #{guitar.producer.name} #{guitar.name}
          p #{guitar.category.name}
          a(href=guitar.url class='my-2 inline-block w-full p-2 border-solid border-2 border-red-900 rounded-md hover:text-red-50 hover:bg-red-500 transform duration-200') details
      else
        li There are no guitars.