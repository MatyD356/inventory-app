extends layout

block content
  h2(class='text-4xl text-red-900') Add new producer
  form(method='POST' action='')
    div(class='flex flex-col my-4')
      label(for='name' class='text-2xl my-2') Name:
      input#name(class='p-2 rounded-md md:w-1/3 border-red-900 border-2' type='text', placeholder='Name of category' name='name' value=(undefined===producer ? '' : producer.name))
    div(class='flex flex-col my-4')
      label(for='desc' class='text-2xl my-2') Description:
      textarea#desc(class='p-2 rounded-md md:w-1/3 border-red-900 border-2' type='textarea', placeholder='description of category' name='desc')
        if(producer)
          | #{producer.desc}
    button(type='submit' class='my-4 p-4 bg-red-50 text-red-900 border-red-900 rounded-md border-2 hover:bg-red-600 hover:text-red-50 transform duration-500') Submit

  if errors
    ul
      for error in errors
        li!= error.msg