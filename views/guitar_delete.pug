extends layout

block content
  div(class='mx-8 shadow-2xl rounded-md p-4 bg-white')
    div(class='flex')
      div(class='w-2/3 h-72 border-2 border-red-600 m-4 mb-0')
      div(class='w-full m-4 mb-0 border-b-2 border-red-600')
        h2(class='text-2xl text-red-900') #{data.name} : #{data._id}
        h2(class='text-2xl text-red-900 my-2') Do you really want to delete this Guitar?
        form(method='POST' action='')
          div
            input#guitarid(type='hidden', name='guitarid', required='true', value=data._id)
          button(type='submit' class='m-4 ml-0 inline-block p-2 border-solid border-2 border-red-900 rounded-md hover:text-red-50 hover:bg-red-500 transform duration-200') Delete
          a(href=data.url class='m-4 inline-block p-2 border-solid border-2 border-red-900 rounded-md hover:text-red-50 hover:bg-red-500 transform duration-200') Cancel